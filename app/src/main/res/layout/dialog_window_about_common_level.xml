<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/dialog_back"
    android:layout_gravity="center"
    android:scaleType="centerCrop"
    android:layout_margin="10dp"
    android:background="@drawable/dialog_background_shape">

    <RelativeLayout
        android:id="@+id/dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/question_card"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/question_card"
            android:layout_centerHorizontal="true">
        </ImageView>
        <TextView
            android:id="@+id/common_level_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question_card"
            android:text="@string/Common_level_description"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:gravity="center">
        </TextView>
        <Button
            android:id="@+id/start_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/common_level_description"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_button"
            android:text="@string/Continue"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:padding="10dp">
        </Button>
    </RelativeLayout>


</LinearLayout>
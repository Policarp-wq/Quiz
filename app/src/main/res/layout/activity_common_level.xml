<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommonLevel">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">
        <ProgressBar
            android:id="@+id/timer"
            android:layout_width="50dp"
            android:layout_height="50dp"
           android:layout_alignParentRight="true"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/circle"
            tools:progress="60">
        </ProgressBar>
        <ImageView
            android:id="@+id/heart1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/full_heart">
        </ImageView>
        <ImageView
            android:id="@+id/heart2"
            android:layout_toRightOf="@id/heart1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/full_heart">
        </ImageView>
        <ImageView
            android:id="@+id/heart3"
            android:layout_toRightOf="@id/heart2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/full_heart">
        </ImageView>
        <TextView
            android:id="@+id/question_txt"
            android:layout_below="@id/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Ты не должен этого видеть"
            android:textSize="25sp"
            android:textColor="@color/golden"
            android:layout_margin="10dp"
            android:gravity="center"
           >
        </TextView>
        <Button
            android:id="@+id/ans1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question_txt"
            android:layout_alignLeft="@+id/question_txt"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:layout_margin="10dp">
        </Button>
        <Button
            android:id="@+id/ans2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question_txt"
            android:layout_alignRight="@+id/question_txt"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:layout_margin="10dp">
        </Button>
        <Button
            android:id="@+id/ans3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ans1"
            android:layout_alignLeft="@+id/question_txt"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:layout_margin="10dp">
        </Button>
        <Button
            android:id="@+id/ans4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ans2"
            android:layout_alignRight="@+id/question_txt"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:layout_margin="10dp">
        </Button>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>